<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for @user, html: { id: "tinito_form" } do |f| %>

        <%= hidden_field_tag :stripe_card_token %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control input-lg", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "Password Confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= label_tag :card_number, "Credit Card Number" %>
          <%= text_field_tag :card_number, nil, name: nil, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :card_code, "Security Code on Card (CVV)" %>
          <%= text_field_tag :card_code, nil, name: nil, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :card_month, "Card Expiration" %>
          <%= select_month nil, { add_month_numbers: true }, { name: nil, id: "card_month" } %>
          <%= select_year nil, { start_year: Date.today.year, end_year: Date.today.year+15 }, { name: nil, id: "card_year" } %>
        </div>

        <!--<% if @user.stripe_card_token.present? %>-->
            <!--Credit Card is on File-->
        <!--<% else %>-->
            <!---->
        <!--<% end %>-->

        <div class="actions">
          <%= f.submit "Submit", class: "button-signup", id: "form-submit-btn" %>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel Request", products_path %> ]
    </div>
  </div>
</div>
