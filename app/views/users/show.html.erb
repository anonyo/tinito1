<h2 class="text-center"><%= "#{@user.name} " + "#{@user.last_name}" %></h2>

<div class="user-info">
    <p>
      <span><strong>Member Since:</strong></span> <%= @user.created_at.strftime("%B %d, %Y") %>
    </p>

    <p>
      <strong><span class="fa fa-envelope-o"></span></strong> <%= @user.email %>
    </p>

    <p>
      <strong><i class="fa fa-credit-card"></i></strong> <%= @user.stripe_customer_token %>
    </p>
    <p>
        <span><strong>Purchases:</strong></span> 0
    </p>
</div>
