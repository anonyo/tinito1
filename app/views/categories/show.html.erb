<h2 class="text-center"><%= @category.name %></h2><small>(<%= pluralize @category.products.count, "product" %>)</small>
<div align="center">
  <% if logged_in? && current_user.admin? %>
      <div class="row">
        <%= link_to "Edit Category Name", edit_category_path(@category) %>
      </div>
  <% end %>
</div>

<div class="row">
  <div class="col-xs-12">
    <% if @category.products.size > 0 %>
        <ul>
          <% @category.products.each do |product| %>
          <li class="prod-cat"> <%= link_to product_path(product.friendly_id) do  %>
                <h6><%= product.name %></h6>
                <%= image_tag product.image.url(:thumb) %></li>
            <% end %>
        </ul>
    <% end %>
    <% else %>
        <p class="text-center">No product available for this category</p>
    <% end %>
  </div>
</div>
