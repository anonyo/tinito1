<h2 class="text-center">Products</h2>
  <% @products.each do |product| %>
      <div class="row">
        <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to product_path(product) do  %>
                <%= image_tag product.image.url(:thumb) %>
            <% end %>
            <div class="caption">
              <h3><%= product.name %></h3>
              <p><%= truncate(product.description, length: 100) %></p>
              <p><%= number_to_currency product.price %></p>
            </div>
          </div>
        </div>
  <% end %>
</div>